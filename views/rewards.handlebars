<div class="container2" style="background-color: rgb(231, 231, 231);">
    <div class="jumbotron jumbotron-fluid p-0 mb-0 rounded" style="background-color: rgb(231, 231, 231)">
        <div class="container text-center" style=" background-color: rgb(231, 231, 231) ">
            <h2 class="display-4 p-3">Welcome to EEP Rewards</h2>
        </div>
    </div>

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="1000">
        <div class="carousel-inner mb-0">
            <div class="carousel-item">

                <img src="../public/assets/download2.png" class="mx-auto d-block w-100 shadow-lg p-3 mb-5 bg-white rounded" alt="First slide">
            </div>
            <div class="carousel-item active">
                <img class="mx-auto d-block w-100 shadow-lg p-3 mb-5 bg-white rounded" src="../public/assets/Unique-employee-perks-that-will-take-your-startup-to-another-level-open-graph-980x512.png"
                    alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="mx-auto d-block w-100 shadow-lg p-3 mb-5 bg-white rounded" src="../public/assets/download2.png" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="mx-auto d-block w-100 shadow-lg p-3 mb-5 bg-white rounded" src="../public/assets/download.jpg" alt="Fourth slide">
            </div>
            <div class="carousel-item">
                <img class="mx-auto d-block w-100 shadow-lg p-3 mb-5 bg-white rounded" src="../public/assets/ideas.png" alt="Fifth slide">
            </div>
            <div class="carousel-item">
                <img class="mx-auto d-block w-100 shadow-lg p-3 mb-5 bg-white rounded" src="../public/assets/the-missing-link-between-employee-wellness_1_orig.jpg"
                    alt="Sixth slide">
            </div>
            <div class="carousel-item">
                <img class="mx-auto d-block w-100 shadow-lg p-3 mb-5 bg-white rounded" src="../public/assets/Reward-Your-Employees.jpg" alt="Seventh slide">
            </div>
        </div>
    </div>

    <div id="deal-view" class="container3">
        <h2>Here are your Rewards:</h2>
        <h4>{{title}}</h4>

    </div>
    <div class="container text-center mx-auto d-block w-100 shadow-lg p-3  bg-white rounded mt-3" id="push-data">
        <div class="container popup-container">
            <div class="space-90"></div>
            <form method="POST">
                <div class="form-row align-items-center">
                    <div class="col-md-3">
                        <label class="sr-only" for="inlineFormInput">Search Rewards</label>
                        <input type="text" class="form-control mb-2" id="inlineFormInput" name="searchTerm" placeholder="Search Rewards" value="">
                    </div>
                    <div class="col-md-6">
                        <label class="sr-only" for="inlineFormInput">Location</label>
                        <input type="text" class="form-control mb-2" id="inlineFormInput" name="location" placeholder="Location (e.g. 'IP', 'Chicago, IL', '1.2.3.4')"
                            value="Chicago, IL">
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary mb-2">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>



    <div class="JSON">
        {{apiData}}
    </div>

    <ul>
        {{#each apiData}}
        <li>{{this.deal.title}}</li>
        {{/each}}
    </ul>

